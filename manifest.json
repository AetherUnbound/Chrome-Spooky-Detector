{
    "manifest_version": 2,

    "name": "Santa Detector",
    "description": "Plays a Christmas song when Santa is found climbing the chimney into your browser!",
    "version": "1.0.0",

    "browser_action": {
        "default_icon": "santa128.png",
        "default_popup": "popup.html",
        "default_title": "Santa Detector Active"
    },

    "icons" : { "16" : "santa16.png",
                "32" : "santa32.png",
                "48" : "santa48.png",
               "128" : "santa128.png"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["snowstorm.js", "content.js"],
            "run_at": "document_end"
        }
    ],
    
    "background": {
	"page": "background.html"
    },

    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "https://ajax.googleapis.com/",
        "<all_urls>"
    ]
}

